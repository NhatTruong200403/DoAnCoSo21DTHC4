@model DoAnCNTT.Models.Booking

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#startDate, #endDate').change(function () {
            var startDate = $('#startDate').val();
            var endDate = $('#endDate').val();

            if (startDate && endDate) {
                $.ajax({
                    url: 'Customer/Bookings/CalculateMiddleDate',
                    type: 'POST',
                    data: { startDate: startDate, endDate: endDate },
                    success: function (result) {
                        $('#Total').val(result);
                    }
                });
            }
        });
    });
</script>
<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PostId" class="control-label"></label>
                <input asp-for="PostId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="RecieveOn" class="control-label"></label>
                <input asp-for="RecieveOn" type="date" id="startDate" class="form-control"/>
                <span asp-validation-for="RecieveOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnOn" class="control-label"></label>
                <input asp-for="ReturnOn" type="date" id="endDate" class="form-control" />
                <span asp-validation-for="ReturnOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" id="Total" class="form-control"  readonly />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PromotionId" class="control-label"></label>
                <select asp-for="PromotionId" class="form-control" asp-items="ViewBag.Promotions"></select>
            </div>
            <div class="form-group">
                <label asp-for="FinalValue" class="control-label"></label>
                <input asp-for="FinalValue" class="form-control" readonly />
                <span asp-validation-for="FinalValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrePayment" class="control-label"></label>
                <input asp-for="PrePayment" class="form-control" readonly />
                <span asp-validation-for="PrePayment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $(document).ready(function () {
        $('#startDate, #endDate').change(function () {
            var startDate = $('#startDate').val();
            var endDate = $('#endDate').val();
            var total = @Model.Total;
            if (startDate && endDate) {
                $.ajax({
                    url: '/Customer/Bookings/CalculateMiddleDate',
                    type: 'POST',
                    data: { startDate: startDate, endDate: endDate, total : total },
                    success: function (result) {
                        var numberOfDays = parseInt(result);
                        
                        // $('#middleDate').text(numberOfDays);
                        $('#Total').val(numberOfDays);
                    }
                });
            }
        });
    });

</script>
