@model DoAnCNTT.Models.Report

@{
    ViewData["Title"] = "Báo cáo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Báo cáo bài viết</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Nội dung</label>
                    <input value="Đây là Admin gửi thông báo khóa bài." asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Nội dung</label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            }
           

            <div class="form-group" hidden>
                <label asp-for="PostId" class="control-label"></label>
                <input asp-for="PostId" class ="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Gửi báo cáo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="javascript:history.go(-1);">Quay về.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
