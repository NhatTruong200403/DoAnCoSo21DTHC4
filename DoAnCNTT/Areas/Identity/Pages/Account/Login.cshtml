@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row1">
        <section>
            <form id="account" method="post">
                <h1 style="margin-left:25%;margin-bottom:10px;">Đăng nhập</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="">
                <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input"  asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                <button id="login-submit" type="submit" style="margin-top:-10px;margin-bottom:5px;" class="w-100 btn btn-lg btn-primary Submit" >Đăng nhập</button>
                </div>
            <div style="display:flex;justify-content: space-between;align-items: center;">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký</a>
                </p>
                </div>
                
            
            </form>
                <div style="margin-top:-17px;">
                    <div style="display:flex;">
                    <hr style="width:45%;" />
                    <img style="width:30px;" src="@Url.Content("~/images/logo/8.png")" />
                    <hr style="width:45%;" />
                    </div>
                   
                    <p>
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                        article
                                        about setting up this ASP.NET application to support logging in via external services
                                    </a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="view" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                <img style="width:30px;" src="@Url.Content("~/images/logo/gg.png")" />  Sign in with Google
                                            </button>
                                            /* @provider.DisplayName */
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                    </p>
        </div>            
        </section>
    </div>






<style>
    .view{
        padding: 5px 70px;
        margin-left: 10%;
        background-color: white;
        color: black;
        border: none;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: -10px;
    }
    .row1 {
        width: 450px;
        margin-inline: auto;
        margin-block: 40px;
        padding: 15px 25px;
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 4px 20px 0 rgba(0,0,0,0.19);
        margin-top:80px;
        background-color: white;
    }

        .row1 h2 {
            text-align: center;
        }

    .tatmau {
        text-decoration: blink;
        color: black;
    }

    .Submit {
        background-color: #1ee156;
    }
</style>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
