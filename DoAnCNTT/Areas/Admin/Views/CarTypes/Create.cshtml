@model DoAnCNTT.Models.CarType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thêm mới</h1>

<h4>Loại xe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="checkbox-list">
                Hãng xe:
                @foreach (var company in ViewBag.Companies)
                {
                    <div class="form-check">
                        <input class="form-check-input car-type-checkbox" type="checkbox" name="SelectedCompanies" value="@company.Value" id="carType-@company.Value">
                        <label class="form-check-label" for="carType-@company.Value">
                            @company.Text
                        </label>
                    </div>
                }
            </div>
            Trạng thái
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> Ẩn
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
