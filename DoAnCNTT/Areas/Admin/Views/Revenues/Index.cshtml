@model IEnumerable<DoAnCNTT.Models.Invoice>
<body>
   
    <div class="container mt-5">
        <h2 class="text-center">Chọn Ngày Tháng Năm Thống Kê</h2>
        <form asp-controller="Revenues" asp-action="Index" method="post">
            <div class="d-flex">
                <div class="form-group mr-3">
                    <label for="day">Ngày:</label>
                    <select class="form-control" id="day" name="day">
                        <option value="0">Chọn ngày</option>
                        <!-- Các giá trị từ 1 đến 31 -->
                        @for (var i = 1; i <= 31; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
                <div class="form-group mr-3">
                    <label for="month">Tháng:</label>
                    <select class="form-control" id="month" name="month">
                        <option value="0">Chọn tháng</option>
                        <!-- Các giá trị từ 1 đến 12 -->
                        @for (var i = 1; i <= 12; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Booking)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Total)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReturnOn)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-area="Admin" asp-controller="Customers" asp-action="Details" asp-route-id="@item.Booking.User.Id">@item.Booking.User.Name</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnOn)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <button type="submit" class="btn btn-primary mt-3">Thống Kê</button>
        </form>
        <div class="mt-3">
            <h2>Tổng doanh thu:</h2>
            <p>@ViewBag.Revenues</p>
        </div>
    </div>
</body>
