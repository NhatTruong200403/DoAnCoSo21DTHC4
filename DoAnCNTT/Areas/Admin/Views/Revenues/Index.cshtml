@model decimal;
<body>
    <div class="container mt-5">
        <h2 class="text-center">Chọn Ngày Tháng Năm Thống Kê</h2>
        <form asp-controller="Revenues" asp-action="CalculateRevenues" method="post">
            <div class="d-flex">
                <div class="form-group mr-3">
                    <label for="day">Ngày:</label>
                    <select class="form-control" id="day" name="day">
                        <option value="0">Chọn ngày</option>
                        <!-- Các giá trị từ 1 đến 31 -->
                        @for (var i = 1; i <= 31; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
                <div class="form-group mr-3">
                    <label for="month">Tháng:</label>
                    <select class="form-control" id="month" name="month">
                        <option value="0">Chọn tháng</option>
                        <!-- Các giá trị từ 1 đến 12 -->
                        @for (var i = 1; i <= 12; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Thống Kê</button>
        </form>
        <div class="mt-3">
            <h2>Tổng doanh thu:</h2>
            <p>@Model</p>
        </div>
    </div>
</body>
